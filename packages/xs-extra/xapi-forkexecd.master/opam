depends: [
  "ocaml"
  "dune" {build}
  "astring"
  "forkexec"
  "systemd" {>= "1.2"}
  "uuidm"
  "xapi-stdext-monadic"
  "xapi-stdext-unix"
  "xapi-stdext-range" {with-test}
]
conflicts: [
  "fd-send-recv" {< "2.0.0"}
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
