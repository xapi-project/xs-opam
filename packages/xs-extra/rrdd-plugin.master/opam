  "xapi-stdext-threads"
  "xapi-stdext-unix"
  "xapi-idl"
  "xapi-rrd-transport" {>= "0.9.0"}
  "xenstore_transport"
]
build: ["dune" "build" "-p" name "-j" jobs]
